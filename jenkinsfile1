pipeline {
    agent any
    
    environment {
        // Add the Docker Hub credentials as authentication variables
        DOCKERHUB_CREDENTIALS = credentials('dh_cred')
    }
    
    triggers {
        pollSCM('*/5 * * * *') // Check every 5 minutes
    }
    
    stages {
        stage('Checkout') {
            agent any
            steps {
                checkout scm
            }
        }
        
        stage('Init') {
            agent any
            steps {
                // Allowing authentication
                script {
                    sh "echo '\$DOCKERHUB_CREDENTIALS_PSW' | docker login -u '\$DOCKERHUB_CREDENTIALS_USR' --password-stdin"
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    sh "docker build -t \$DOCKERHUB_CREDENTIALS_USR/image:\$BUILD_ID ."
                }
            }
        }
        
        stage('Deliver') {
            steps {
                script {
                    sh "docker push \$DOCKERHUB_CREDENTIALS_USR/image:\$BUILD_ID"
                }
            }
        }
        
        stage('Cleanup') {
            steps {
                script {
                    sh "docker rmi \$DOCKERHUB_CREDENTIALS_USR/image:\$BUILD_ID"
                    sh "docker logout"
                }
            }
        }
    }
}
